@model work_01_Session.Models.AppUser
@{
    ViewData["Title"] = "Login";
}

<h1 class="display-4">Login</h1>
<div class="row">
    <div class="col-6">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-2">
                <label asp-for="UserName" class="col-form-label"></label>
                <input asp-for="UserName" class="form-control"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="row mb-2">
                <label asp-for="Password" class="col-form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="row mb-2">
                <input type="submit" value="Login" class="btn btn-success btn-sm"/>
            </div>
        </form>
    </div>
    <div class="col-6">
        @if (TempData["wrongInfo"] != null)
        {
            <h2 class="alert alert-success p-3 text-center">@TempData["wrongInfo"]</h2>
        }
    </div>
</div>
<div>
    <a asp-action="SignUp" asp-controller="Shopping" class="btn btn-primary">SignUp</a>
    <a asp-action="Index">Back to List</a>
</div>

